<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="335dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/commu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임명 :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/input_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="모임명을 입력하세요."
        />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="335dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임원 수 :"
            android:id="@+id/commu_peo"
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/input_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="모임 참여자 수를 입력하세요."
            android:inputType="number"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="335dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임종류 :"
            android:id="@+id/commu_type"
            android:textSize="20dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toStartOf="@+id/radio02"
            tools:layout_editor_absoluteY="273dp"
            android:layout_gravity="center"
            >

            <RadioButton
                android:id="@+id/radio_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물"
                android:textColor="#ff55aaff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_meal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="음식"
                android:textColor="#ff55aaff"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="335dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모임 공개  :"
            android:id="@+id/commu_open"
            android:textSize="20dp"
            />

        <RadioGroup
            android:id="@+id/radioGroup02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            app:layout_constraintEnd_toStartOf="@+id/radio02"
            tools:layout_editor_absoluteY="273dp"
            android:layout_gravity="center"
            >

            <RadioButton
                android:id="@+id/radio2_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공개"
                android:textColor="#ff55aaff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio2_notopen"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="비공개"
                android:textColor="#ff55aaff"
                android:textSize="20dp"
                android:textStyle="bold"
                />
        </RadioGroup>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="onClick2"
        android:text="완성"
        android:textSize="20dp" />


</LinearLayout>